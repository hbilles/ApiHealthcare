{% extends 'apihealthcare/_layout' %}

{% import '_includes/forms' as forms %}

{% set selectedTab = 'perDiemClients' %}

{% set content %}

<form id="apihealthcare-editPerDiemClient" action="" method="post" accept-charset="UTF-8">
	<input type="hidden" name="action" value="apiHealthcare/options/savePerDiemClient">
	<input type="hidden" name="redirect" value="apihealthcare/per-diem-clients">
	{% if perDiemClient.id %}<input type="hidden" name="perDiemClientId" value="{{ perDiemClient.id }}">{% endif %}
	
	{{ forms.textField({
		first: true,
		label: 'Name'|t,
		instructions: 'The name given this Client in API Healthcare.'|t,
		id: 'name',
		name: 'name',
		value: perDiemClient.name,
		errors: perDiemClient.getErrors('name'),
		autofocus: true,
		required: true
	}) }}

	{{ forms.textField({
		label: 'Client ID'|t,
		instructions: 'The ID given this Client in API Healthcare.'|t,
		id: 'clientId',
		name: 'clientId',
		value: perDiemClient.clientId,
		required: true
	}) }}

	<hr>

	<div class="buttons">
		<input type="submit" class="btn submit" value="{{ 'Save'|t }}">
	</div>
</form>

{% endset %}
